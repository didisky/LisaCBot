# PostgreSQL Configuration
POSTGRES_DB=lisacbot
POSTGRES_USER=lisacbot
POSTGRES_PASSWORD=change_me_in_production

# Backend Configuration
BOT_POLL_INTERVAL_SECONDS=60
JAVA_OPTS=-Xmx512m -Xms256m

# CORS Configuration
# Comma-separated list of allowed origins
# Development: http://localhost:4200,http://localhost (for local testing)
# Production with Nginx proxy (same domain): Leave empty or comment out - CORS not needed
# Production with separate domains: Set to your frontend domain, e.g., https://your-domain.com
CORS_ALLOWED_ORIGINS=http://localhost:4200,http://localhost,http://localhost:80

# JWT Configuration (IMPORTANT: Change in production!)
JWT_SECRET=changeThisToASecureRandomString32CharactersMinimum!

# Admin Credentials (IMPORTANT: Change in production!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_me_in_production
