# PostgreSQL Configuration
POSTGRES_DB=lisacbot
POSTGRES_USER=lisacbot
# SECURITY: Generate with: openssl rand -base64 24
POSTGRES_PASSWORD=CHANGE_ME_REQUIRED

# Backend Configuration
BOT_POLL_INTERVAL_SECONDS=60
JAVA_OPTS=-Xmx512m -Xms256m

# CORS Configuration
# Development: Use http://localhost:4200 for local Angular dev server
# Production with Docker+Nginx (same domain): Leave EMPTY (CORS not needed)
# Production with separate domains: Set to https://your-frontend-domain.com
CORS_ALLOWED_ORIGINS=

# JWT Configuration (REQUIRED for production!)
# Generate a secure random secret with: openssl rand -base64 32
# Minimum 32 characters required for HS256 algorithm
JWT_SECRET=CHANGE_ME_REQUIRED

# Admin Credentials (REQUIRED for production!)
# Username for the default admin account
ADMIN_USERNAME=admin
# Generate a secure password with: openssl rand -base64 16
ADMIN_PASSWORD=CHANGE_ME_REQUIRED
